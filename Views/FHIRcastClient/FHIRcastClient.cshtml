@model FHIRcastSandbox.Model.ClientModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/Style.css" />
    <title>View</title>
</head>
<body>
    <h1 align="center">FHIRcast Sandbox</h1>

    <div id="root" class="container-fluid" style="background-color:aliceblue;">
        <div class="row">
            @* Client info column *@
            <div class="col-8">
                <h2 align="center">Client info</h2>
                @* Title row *@
                <div class="row">
                    <div class="col-6"><h3 align="center">Subscription info</h3></div>
                    <div class="col-6"><h3 align="center">User session info</h3></div>
                </div>
                @* Content row *@
                <div class="row">
                    @* Subscription column *@
                    <div class="col-6" style="border:1px solid black;">
                        @* Create new subscriptions form *@
                        <div class="row">
                            <div class="col">
                                <div align="center">
                                    <fieldset class="SubscriptionFieldSet">
                                        @{
                                            using (Html.BeginForm("Subscribe", "FHIRcastClient", FormMethod.Post))
                                            {
                                                <label>Hub url</label>
                                                <br />
                                                <div>
                                                    <input type="text" name="subscriptionUrl" id="subscriptionUrl" class="form-control" />
                                                </div>
                                                <label>Topic</label>
                                                <br />
                                                <div>
                                                    <input type="text" name="topic" id="topic" class="form-control" />
                                                </div>
                                                <label>Events</label>
                                                <br />
                                                <div>
                                                    <input type="text" name="events" id="events" class="form-control" />
                                                </div>

                                                <br />

                                                <div class="row">
                                                    <div class="col"><input type="submit" value="Subscribe" class="btn btn-primary" /></div>
                                                </div>
                                            }
                                        }
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                        @* Table of active subscriptions *@
                        <div class="row">
                            <div class="col">
                                <fieldset class="SubscriptionInfo">
                                    @{
                                        using (Html.BeginForm("Unsubscribe", "FHIRcastClient", FormMethod.Post))
                                        {
                                            <table id="clientSubTable" class="table table-striped table-bordered">
                                                <thead class="thead-dark">
                                                    <tr><td colspan="4">Client's Subscriptions</td></tr>
                                                    <tr>
                                                        <td>Subscription ID</td>
                                                        <td>Hub URL</td>
                                                        <td>Topic</td>
                                                        <td>Events</td>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model.ActiveSubscriptions != null)
                                                    {
                                                        @foreach (var item in Model.ActiveSubscriptions)
                                                        {
                                                            <tr>
                                                                <td><input type="text" name="subscriptionId" id="subscriptionId" value="@item.UID" /></td>
                                                                <td>@item.HubURL</td>
                                                                <td>@item.Topic</td>
                                                                <td>@String.Join(",", item.Events)</td>
                                                                <td><input type="submit" value="Unsubscribe" class="btn btn-default" /></td>
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        }
                                    }
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    @* User session column *@
                    <div class="col-6">
                        <div align="center">
                            <fieldset class="UserSessionFieldSet">
                                @{
                                    using (Html.BeginForm("Post", "FHIRcastClient", FormMethod.Post))
                                    {
                                        <div class="row">
                                            <div class="col">
                                                <div class="form-group">
                                                    <label>User Identifier</label>
                                                    <br />
                                                    @Html.TextBoxFor(m => m.UserIdentifier, new { @class = "form-control" })
                                                </div>
                                                <div class="form-group">
                                                    <label>Patient Identifier</label>
                                                    <br />
                                                    @Html.TextBoxFor(m => m.PatientIdentifier, new { @class = "form-control" })
                                                </div>
                                                <div class="form-group">
                                                    <label>Patient Id Issuer</label>
                                                    <br />
                                                    @Html.TextBoxFor(m => m.PatientIdIssuer, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col">
                                                <div class="form-group">
                                                    <label>Accession Number</label>
                                                    <br />
                                                    @Html.TextBoxFor(m => m.AccessionNumber, new { @class = "form-control" })
                                                </div>
                                                <div class="form-group">
                                                    <label>Accession Number Group</label>
                                                    <br />
                                                    @Html.TextBoxFor(m => m.AccessionNumberGroup, new { @class = "form-control" })
                                                </div>
                                                <div class="form-group">
                                                    <label>Study Id</label>
                                                    <br />
                                                    @Html.TextBoxFor(m => m.StudyId, new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <label>Topic</label>
                                            <br />
                                            @Html.TextBoxFor(m => m.Topic, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Event</label>
                                            <br />
                                            @Html.TextBoxFor(m => m.Event, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Update" class="btn btn-primary" />
                                        </div>
                                    }
                                }
                            </fieldset>
                        </div>
                    </div>
                </div>
                @* Miscellaneous row *@
                <div class="row">
                    <div class="col-12">
                        <div align="center">
                            @{
                                using (Html.BeginForm("Refresh", "FHIRcastClient", FormMethod.Post))
                                {
                                    <div class="form-group">
                                        <input type="submit" value="Refresh" class="btn btn-primary" />
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>

            @* Hub info column *@
            <div class="col-4">
                <h2 align="center">Hub info</h2>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
    <script src="~/js/signalr.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
